<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="by.leonovich.hibernatecrm.mappings.singletable">
    <class name="University" table="T_UNIVERSITY">
        <comment>
            ONE-TO-MANY RELATION
            inverse="true" - determine who is the owner of relation
        </comment>
        <id name="id" column="F_ID">
            <generator class="native">
                <param name="sequence">T_UNIVERSITY_SEQ</param>
            </generator>
        </id>
        <property name="name" column="F_NAME"/>
        <!--
        TODO turn lazy="false" to lazy="true" after DAO layer will be rewritten. Cause currently, session is opened-closed
        TODO in DAO, and if try to access students collection after session is closed, LazyInitializationException will be thrown
        -->
        <set name="students" table="T_PERSON" cascade="save-update" inverse="true" lazy="false" fetch="select">
            <key column="F_UNIVERSITY_ID" not-null="true"/>
            <one-to-many class="Student"/>
        </set>
    </class>
</hibernate-mapping>